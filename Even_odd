import java.util.*;
public class Even_odd {
    public static void main(String arg[]) {

        int num;
        System.out.println("Enter the number:");
        Scanner sc = new Scanner(System.in);
        num = sc.nextInt();
        if (num % 2 == 0) {
            System.out.println("Number is even:");
        } else {
            System.out.println("NUmber is odd");

        }
    }
}
